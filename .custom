# Used to configure keyboard layout
#setxkbmap -model abnt -layout us -variant intl

bind -x '"\C-l": clear'

parse_git_branch() {
     git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}

export PS1="\[\e[96m\]\u@\[\e[95m\]\h \[\e[32m\]\w \[\e[93m\]\$(parse_git_branch)\[\e[00m\]$ "
export PROMPT_DIRTRIM=2